

<h4>Name:</h4> <p><%= @attraction.name%></p> <br>
<h4>Total number of users:</h4> <p><%= @attraction.tickets%></p> <br>
<h4>Ticket Requirement:</h4> <p><%= @attraction.tickets%></p> <br>
<h4>Height Requirement:</h4> <p><%= @attraction.min_height%></p> <br>
<h4>Nausea Rating:</h4> <p><%= @attraction.nausea_rating%></p> <br>
<h4>Happiness Rating:</h4> <p><%= @attraction.happiness_rating%></p> <br>

<% if @user.admin%>
  <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
  <%else%>
    <%= form_for @ride do |f| %>
      <%= f.hidden_field :user_id%>
      <%= f.hidden_field :attraction_id%>
      <%= f.submit value='Go on this ride'%>
    <% end %>
<%end%>


<%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
  <input type=submit value='Log Out'>
<% end %>


